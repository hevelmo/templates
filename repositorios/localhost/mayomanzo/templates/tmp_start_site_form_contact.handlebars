<div id="form-wrapper">
    <form class="form-horizontal" id="form-contact-element" onsubmit="$.submit_contact_form(); return false;">
        <!-- contact us form --> 
        <!-- Text input-->
        <div class="form-group contact_elements">
            {{!--<label class="col-md-3 control-label" for="firstname">First Name</label>--}}
            <div class="contact_element ab changes-columns">
                <fieldset>
                    <input id="firstname" 
                        name="firstname" 
                        type="text" 
                        placeholder="Nombre" 
                        class="form-control input-md validate-required"
                        data-validation-data="required|name">
                        <p class="invalid-message" id="error_nombre">Este campo es obligatorio<span>&nbsp;</span></p>
                </fieldset>
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group contact_elements">
            {{!--<label class="col-md-3 control-label" for="lastname">Last Name</label>--}}
            <div class="contact_element ab changes-columns">
                <fieldset>
                    <input id="lastname" 
                        name="lastname" 
                        type="text" 
                        placeholder="Apellidos" 
                        class="form-control input-md validate-required" 
                        data-validation-data="required|name">
                        <p class="invalid-message" id="error_nombre">Este campo es obligatorio<span>&nbsp;</span></p>
                </fieldset>
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group contact_elements">
            {{!--<label class="col-md-3 control-label" for="phone">Phone</label>--}}
            <div class="contact_element ab changes-columns">
                <fieldset>
                    <input id="phone" 
                        name="phone" 
                        type="text" 
                        placeholder="Telefono" 
                        class="form-control input-md validate-required" 
                        data-validation-data="required|phone">
                        <p class="invalid-message" id="error_phone">Este campo es obligatorio<span>&nbsp;</span></p>
                </fieldset>
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group contact_elements">
            {{!--<label class="col-md-3 control-label" for="email">E-mail</label>--}}
            <div class="contact_element ab changes-columns">
                <fieldset>
                    <input id="email" 
                        name="email" 
                        type="text" 
                        placeholder="Correo" 
                        class="form-control input-md validate-required" 
                        data-validation-data="required|email">
                        <p class="invalid-message" id="error_mail">Este campo es obligatorio<span>&nbsp;</span></p>
                </fieldset>
            </div>
        </div>
        <!-- Textarea -->
        <div class="form-group contact_elements">
            {{!--<label class="col-md-3 control-label" for="message">Message</label>--}}
            <div class="contact_element ab changes-columns">
                <fieldset>
                    <textarea class="form-control validate-required" 
                        id="message" 
                        name="message" 
                        placeholder="Mensaje" rows="4"
                        data-validation-data="required|address"></textarea>
                    <p class="invalid-message" id="error_mensaje">Este campo es obligatorio<span>&nbsp;</span></p>
                </fieldset>
            </div>  
        </div>
        <!-- Button -->
        <div class="form-group clearfix">
            <div class="col-md-offset-7 col-md-5 loader_send">
                <div class="msg"></div>
                <input type="submit" id="submit" name="submit" class="btn tp-btn-small btn-raised col-md-12 send_contact_form" value="Enviar">
                {{!--<img id="loader_send_icon" src="img/ajax-loader.gif" style="display:none; position: absolute; left: -30px; top: 25px;">--}}
                <div id="loader_send_icon" class="form-loader" style="display: none;">
                    <div class="loader">
                        <div class="loader-wrap">
                            <div class="loader-item"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="form-thanks" style="display: none">
    {{!--<p class="agradecimiento_titulo">Mensaje enviado.</p>--}}
    <p class="agradecimiento_titulo2">
        En breve responderemos tu mensaje al siguiente correo:
        <br>
        <span id="email-from">-</span>
    </p>
</div>
